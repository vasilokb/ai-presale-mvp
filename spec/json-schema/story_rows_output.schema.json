{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LLM Output: Story Rows",
  "type": "object",
  "required": ["document_id", "version", "llm_model", "rows", "totals"],
  "properties": {
    "document_id": { "type": "string", "minLength": 1 },
    "version": { "type": "integer", "minimum": 1 },
    "llm_model": { "type": "string", "minLength": 1 },
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "row_id",
          "epic",
          "story_title",
          "story_type",
          "role",
          "see",
          "do",
          "get",
          "acceptance",
          "pert_hours"
        ],
        "properties": {
          "row_id": { "type": "string", "minLength": 1 },
          "epic": { "type": "string", "minLength": 1 },
          "story_title": { "type": "string", "minLength": 1 },
          "story_type": { "type": "string", "enum": ["functional", "non_functional"] },
          "role": { "type": "string", "enum": ["SA/BA", "Backend", "Frontend", "Data-engineer", "DevOps"] },
          "see": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
          "do": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
          "get": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
          "acceptance": { "type": "array", "minItems": 2, "items": { "type": "string", "minLength": 1 } },
          "pert_hours": {
            "type": "object",
            "required": ["optimistic", "most_likely", "pessimistic", "expected"],
            "properties": {
              "optimistic": { "type": "number", "minimum": 0 },
              "most_likely": { "type": "number", "minimum": 0 },
              "pessimistic": { "type": "number", "minimum": 0 },
              "expected": { "type": "number", "minimum": 0 }
            }
          }
        }
      }
    },
    "totals": {
      "type": "object",
      "required": ["expected_hours"],
      "properties": {
        "expected_hours": { "type": "number", "minimum": 0 }
      }
    }
  }
}
